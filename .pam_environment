__BASE07                            DEFAULT=fbf1c7
__BASE08                            DEFAULT=fb4934
__BASE09                            DEFAULT=fe8019
__BASE0A                            DEFAULT=fabd2f
__BASE0B                            DEFAULT=b8bb26
__BASE0C                            DEFAULT=8ec07c
__BASE0D                            DEFAULT=83a598
__BASE0E                            DEFAULT=d3869b
__BASE0F                            DEFAULT=d65d0e

# setup font settings
FONT_SANS                           DEFAULT="Quicksand Medium"
FONT_SERIF                          DEFAULT=Merriweather
FONT_MONO                           DEFAULT=mononoki
